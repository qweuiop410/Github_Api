<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/SimpleDraweeView_Image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />

        <TextView
            android:id="@+id/TextView_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/SimpleDraweeView_Image"
            android:layout_marginLeft="20dp"
            android:text="octocat"
            android:textSize="20sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/TextView_DM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/SimpleDraweeView_Image"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/TextView_Name"
            android:text="DirectMessage"
            android:textSize="20sp"
            android:textColor="#00C7FF"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/TextView_Repos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="users/octocat/repos"
        android:textSize="20sp"
        android:textColor="#00C7FF"
        android:clickable="true"
        />


</LinearLayout>